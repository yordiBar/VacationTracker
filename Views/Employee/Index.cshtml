@model IEnumerable<VacationTracker.Models.DTO.EmployeeDetailsDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>

<p>
    <a asp-action="Create">Add an employee</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Display Name
                </th>
                <th>
                    Company
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    Job Title
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.DisplayName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobTitle)
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> |
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees to display. Please add a new employee!</p>
}